<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@mipmap/oherro" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="哈哈哈，这是内容"
        android:textColor="@color/colorContentText"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/upview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center">

            <ImageView
                android:id="@+id/zanimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/zan" />

            <TextView
                android:textColor="@color/colorContentText"
                android:id="@+id/zan"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textSize="13dp"
                android:text="999" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/downview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center">

            <ImageView
                android:id="@+id/downimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/zanno" />

            <TextView
                android:textColor="@color/colorContentText"
                android:id="@+id/down"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textSize="13dp"
                android:text="999" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shareview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/share" />

            <TextView
                android:textColor="@color/colorContentText"
                android:id="@+id/share"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textSize="13dp"
                android:text="999" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/deepgray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="最新评论"
            android:textSize="14dp"/>
    </LinearLayout>
</LinearLayout>
